{
  "name": "shrinkable-menu",
  "version": "1.0.0",
  "description":
    "Collapses a single-line menu bar's overflowing elements into a hamburger.",
  "main": "src/js/index.js",
  "author": "John Watkins <john.watkins@colby.edu>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server",
    "build":
      "webpack --config webpack.build.config.babel.js && webpack -p && webpack -p --config webpack.build.config.babel.js",
    "lint": "eslint src/js",
    "stylelint": "stylelint src/css --fix",
    "prepare": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prepare",
      "pre-push": "npm run lint && npm run stylelint"
    }
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-color-function": "^1.3.3",
    "css-loader": "^0.28.8",
    "cssloader": "^1.1.1",
    "cssnano": "^3.10.0",
    "eslint": "^4.14.0",
    "eslint-config-fbjs": "^2.0.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-relay": "^0.0.20",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.15.0-beta.16",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-props-themes": "^0.1.4",
    "postcss-loader": "^2.0.10",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1"
  },
  "dependencies": {
    "click-outside": "^2.0.2",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0"
  }
}
